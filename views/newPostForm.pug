extends layout

block content
  h1= title
  if errors
   ul
    for error in errors
     li!= error.msg
  form(role='form' method='POST' action='')
    div.form-group.mb-3
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='title' name='title')
    div.form-group.mb-3
      label(for='message') Last name:
      input#message.form-control(type='text', placeholder='message' name='message')
    div.row.justify-content.start
      .col-1
        button.col.btn.btn-primary(type="submit") Submit
      .col
        a.col.btn.btn-secondary(type="button", href='/') Close