extends layout

block content
  h1= title
  if message
   h3=message
  form(role='form' method='POST' action='/users/signin')
    div.form-group.mb-3
      label(for='username') Email:
      input#username.form-control(type='email', placeholder='name@email.com' name='username')
    div.form-group.mb-3
      label(for='password') Password:
      input#password.form-control(type='text', placeholder='password' name='password')
    div.row.justify-content.start
      .col-1
        button.col.btn.btn-primary(type="submit") Submit
      .col
        a.col.btn.btn-secondary(type="button", href='/') Close